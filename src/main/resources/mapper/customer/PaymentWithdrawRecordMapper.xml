<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzfh.rest_p2p.customer.mapper.PaymentWithdrawRecordMapper">
	<resultMap type="com.hzfh.api.p2pCustomer.model.PaymentWithdrawRecord" id="resultMapPaymentWithdrawRecord">
		<result property="id" column="id"/>
		<result property="withdrawNo" column="withdraw_no"/>
		<result property="sn" column="sn"/>
		<result property="status" column="status"/>
		<result property="timeCreate" column="time_create" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
		<result property="comment" column="comment"/>
	</resultMap>
	<select id="getList" resultMap="resultMapPaymentWithdrawRecord">
		SELECT id,withdraw_no,sn,status,time_create,comment
		FROM payment_withdraw_record
	</select>
	<select id="getPagingList" resultMap="resultMapPaymentWithdrawRecord" parameterType="com.hzfh.api.p2pCustomer.model.query.PaymentWithdrawRecordCondition" statementType="STATEMENT">
		SELECT id,withdraw_no,sn,status,time_create,comment FROM payment_withdraw_record where 1=1
		ORDER BY
		<foreach item="item" collection="sortItemList" separator=",">
			${item.sortFeild} ${item.sortType}
		</foreach>
		LIMIT ${startIndex},${pageSize}
	</select>
	<select id="getTotalCount" resultType="long" parameterType="com.hzfh.api.p2pCustomer.model.query.PaymentWithdrawRecordCondition" statementType="STATEMENT">
		SELECT count(1) FROM payment_withdraw_record where 1=1
	</select>
	<select id="getInfo" resultMap="resultMapPaymentWithdrawRecord" parameterType="int">
		SELECT id,withdraw_no,sn,status,time_create,comment FROM payment_withdraw_record where id=#{id}
	</select>
	<insert id="add" parameterType="com.hzfh.api.p2pCustomer.model.PaymentWithdrawRecord" useGeneratedKeys="true" keyProperty="id">
		insert into payment_withdraw_record
		(withdraw_no,sn,status,time_create,comment)
		values
		(#{withdrawNo},#{sn},#{status},#{timeCreate},#{comment})
	</insert>
	<update id="update" parameterType="com.hzfh.api.p2pCustomer.model.PaymentWithdrawRecord">
		update payment_withdraw_record set 
		withdraw_no=#{withdrawNo},sn=#{sn},status=#{status},time_create=#{timeCreate},comment=#{comment}
		where id=#{id}
	</update>
	<delete id="delete" parameterType="int">
		delete from payment_withdraw_record where id = #{id}
	</delete>
</mapper>