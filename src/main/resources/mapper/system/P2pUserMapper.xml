<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzfh.rest_p2p.system.mapper.P2pUserMapper">
    <resultMap type="com.hzfh.api.p2pPermission.model.P2pUser" id="resultMapP2pUser">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="isTest" column="is_test"/>
        <result property="status" column="status"/>
        <result property="isRead" column="is_read"/>
    </resultMap> 
    <select id="getInfoByUserNo" resultMap="resultMapP2pUser" parameterType="int">
        SELECT id,username,password,email,is_test,status,is_read FROM p2p_user
        where id=#{userNo}
    </select>
</mapper>