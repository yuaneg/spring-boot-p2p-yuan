<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzfh.rest_p2p.system.mapper.UserDetailMapper">
    <resultMap type="com.hzfh.api.p2pSystem.model.UserDetail" id="resultMapUserDetail">
        <result property="id" column="id"/>
        <result property="userNo" column="user_no"/>
        <result property="userName" column="user_name"/>
        <result property="cellphone" column="cellphone"/>
        <result property="email" column="email"/>
        <result property="parentNo" column="parent_no"/>
        <result property="telephone" column="telephone"/>
    </resultMap>
    <select id="getList" resultMap="resultMapUserDetail">
        SELECT id,user_no,user_name,cellphone,email,parent_no,telephone
        FROM user_detail
    </select>
    <select id="getPagingList" resultMap="resultMapUserDetail" parameterType="com.hzfh.api.p2pSystem.model.query.UserDetailCondition" statementType="STATEMENT">
        SELECT id,user_no,user_name,cellphone,email,parent_no,telephone FROM user_detail where 1=1
        ORDER BY
        <foreach item="item" collection="sortItemList" separator=",">
            ${item.sortFeild} ${item.sortType}
        </foreach>
        LIMIT ${startIndex},${pageSize}
    </select>
    <select id="getTotalCount" resultType="long" parameterType="com.hzfh.api.p2pSystem.model.query.UserDetailCondition" statementType="STATEMENT">
        SELECT count(1) FROM user_detail where 1=1
    </select>
    <select id="getInfo" resultMap="resultMapUserDetail" parameterType="int">
        SELECT id,user_no,user_name,cellphone,email,parent_no,telephone FROM user_detail where id=#{id}
    </select>
    <select id="getInfoByUserNo" resultMap="resultMapUserDetail" parameterType="int">
        SELECT id,user_no,user_name,cellphone,email,parent_no,telephone FROM user_detail
        where user_no=#{userNo}
    </select>
    <insert id="add" parameterType="com.hzfh.api.p2pSystem.model.UserDetail" useGeneratedKeys="true" keyProperty="id">
        insert into user_detail
        (user_no,user_name,cellphone,email,parent_no,telephone)
        values
        (#{userNo},#{userName},#{cellphone},#{email},#{parentNo},#{telephone})
    </insert>
    <update id="update" parameterType="com.hzfh.api.p2pSystem.model.UserDetail">
        update user_detail set
        user_no=#{userNo},user_name=#{userName},cellphone=#{cellphone},email=#{email},parent_no=#{parentNo},telephone=#{telephone}
        where id=#{id}
    </update>
    <delete id="delete" parameterType="int">
        delete from user_detail where id = #{id}
    </delete>
</mapper>