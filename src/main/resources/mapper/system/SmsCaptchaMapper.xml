<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzfh.rest_p2p.system.mapper.SmsCaptchaMapper">
	<resultMap type="com.hzfh.api.p2pSystem.model.SmsCaptcha" id="resultMapSmsCaptcha">
		<result property="id" column="id"/>
		<result property="code" column="code"/>
		<result property="inTime" column="in_time" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
		<result property="expireTime" column="expire_time" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
		<result property="status" column="status"/>
		<result property="userNo" column="user_no"/>
		<result property="telephone" column="telephone"/>
		<result property="busiType" column="busi_type"/>
		<result property="available" column="available"/>
		<result property="editTime" column="edit_time" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
	</resultMap>
	<select id="getList" resultMap="resultMapSmsCaptcha">
		SELECT id,code,in_time,expire_time,status,user_no,telephone,edit_time,busi_type,available
		FROM sms_captcha
	</select>
	<select id="getPagingList" resultMap="resultMapSmsCaptcha" parameterType="com.hzfh.api.p2pSystem.model.query.SmsCaptchaCondition" statementType="STATEMENT">
		SELECT id,code,in_time,expire_time,status,user_no,telephone,edit_time,busi_type,available FROM sms_captcha where 1=1
		ORDER BY
		<foreach item="item" collection="sortItemList" separator=",">
			${item.sortFeild} ${item.sortType}
		</foreach>
		LIMIT ${startIndex},${pageSize}
	</select>
	<select id="getTotalCount" resultType="long" parameterType="com.hzfh.api.p2pSystem.model.query.SmsCaptchaCondition" statementType="STATEMENT">
		SELECT count(1) FROM sms_captcha where 1=1
	</select>
	<select id="getInfo" resultMap="resultMapSmsCaptcha" parameterType="int">
		SELECT id,code,in_time,expire_time,status,user_no,telephone,edit_time,busi_type,available FROM sms_captcha where id=#{id}
	</select>
	<select id="getSmsCaptchaByCellphone" resultMap="resultMapSmsCaptcha" >
		SELECT id,code,in_time,expire_time,status,user_no,telephone,edit_time
		FROM sms_captcha 
		where telephone=#{cellphone}
		order by in_time DESC
		limit 1
	</select>
	<insert id="add" parameterType="com.hzfh.api.p2pSystem.model.SmsCaptcha" useGeneratedKeys="true" keyProperty="id">
		insert into sms_captcha
		(code,in_time,expire_time,status,user_no,telephone,edit_time,busi_type,available)
		values
		(#{code},current_timestamp(),#{expireTime},#{status},#{userNo},#{telephone},current_timestamp(),#{busiType},#{available})
	</insert>
	<insert id="insertInfoToSmsCatpchaApp" parameterType="com.hzfh.api.p2pSystem.model.SmsCaptcha" useGeneratedKeys="true" keyProperty="id">
		insert into sms_captcha
		(code,in_time,expire_time,status,user_no,telephone,edit_time)
		values
		(#{code},current_timestamp(),#{expireTime},#{status},#{userNo},#{telephone},current_timestamp())
	</insert>
	<update id="update" parameterType="com.hzfh.api.p2pSystem.model.SmsCaptcha">
		update sms_captcha set 
		code=#{code},expire_time=#{expireTime},status=#{status},user_no=#{userNo},telephone=#{telephone},edit_time=current_timestamp(),available=#{available},busi_type=#{busiType}
		where id=#{id}
	</update>
	<delete id="delete" parameterType="int">
		delete from sms_captcha where id = #{id}
	</delete>
</mapper>