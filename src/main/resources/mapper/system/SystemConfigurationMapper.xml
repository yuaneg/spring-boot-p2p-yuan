<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzfh.rest_p2p.system.mapper.SystemConfigurationMapper">
	<resultMap type="com.hzfh.api.p2pSystem.model.SystemConfiguration" id="resultMapSystemConfiguration">
		<result property="id" column="id"/>
		<result property="code" column="code"/>
		<result property="value" column="value"/>
		<result property="name" column="name"/>
		<result property="status" column="status"/>
		<result property="comment" column="comment"/>
	</resultMap>
	<select id="getList" resultMap="resultMapSystemConfiguration">
		SELECT id,code,value,name,status,comment
		FROM system_configuration
	</select>
	<select id="getPagingList" resultMap="resultMapSystemConfiguration" parameterType="com.hzfh.api.p2pSystem.model.query.SystemConfigurationCondition" statementType="STATEMENT">
		SELECT id,code,value,name,status,comment FROM system_configuration where 1=1
		ORDER BY
		<foreach item="item" collection="sortItemList" separator=",">
			${item.sortFeild} ${item.sortType}
		</foreach>
		LIMIT ${startIndex},${pageSize}
	</select>
	<select id="getTotalCount" resultType="long" parameterType="com.hzfh.api.p2pSystem.model.query.SystemConfigurationCondition" statementType="STATEMENT">
		SELECT count(1) FROM system_configuration where 1=1
	</select>
	<select id="getInfo" resultMap="resultMapSystemConfiguration" parameterType="int">
		SELECT id,code,value,name,status,comment FROM system_configuration where id=#{id}
	</select>
	<select id="getInfoCodeAndStatus" resultMap="resultMapSystemConfiguration">
		SELECT id,code,value,name,status,comment FROM system_configuration where code=#{code} and status=#{status}
	</select>
	<insert id="add" parameterType="com.hzfh.api.p2pSystem.model.SystemConfiguration" useGeneratedKeys="true" keyProperty="id">
		insert into system_configuration
		(code,value,name,status,comment)
		values
		(#{code},#{value},#{name},#{status},#{comment})
	</insert>
	<update id="update" parameterType="com.hzfh.api.p2pSystem.model.SystemConfiguration">
		update system_configuration set 
		code=#{code},value=#{value},name=#{name},status=#{status},comment=#{comment}
		where id=#{id}
	</update>
	<delete id="delete" parameterType="int">
		delete from system_configuration where id = #{id}
	</delete>
</mapper>