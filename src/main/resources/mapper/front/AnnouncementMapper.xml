<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzfh.rest_p2p.front.mapper.AnnouncementMapper">
	<resultMap type="com.hzfh.api.p2pFront.model.Announcement" id="resultMapAnnouncement">
		<result property="id" column="id"/>
		<result property="subject" column="subject"/>
		<result property="isTop" column="is_top"/>
		<result property="isRed" column="is_red"/>
		<result property="linkurl" column="linkurl"/>
		<result property="content" column="content"/>
		<result property="type" column="type"/>
		<result property="startTime" column="start_time" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
		<result property="endTime" column="end_time" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
		<result property="status" column="status"/>
		<result property="inUserNo" column="in_user_no"/>
		<result property="inTime" column="in_time" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
		<result property="editUserNo" column="edit_user_no"/>
		<result property="editTime" column="edit_time" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
		<result property="webType" column="web_type"/>
	</resultMap>
	<select id="getList" resultMap="resultMapAnnouncement">
		SELECT id,subject,is_top,is_red,linkurl,content,type,start_time,end_time,status,in_user_no,in_time,edit_user_no,edit_time,web_type
		FROM announcement
		where web_type=1 and status=1
	</select>
	<select id="getListAPP" resultType="map">
		SELECT id, subject,start_time as startTime,end_time as endTime
		FROM announcement
		where web_type=1 and status=1
	</select>
	<select id="getPagingList" resultMap="resultMapAnnouncement" parameterType="com.hzfh.api.p2pFront.model.query.AnnouncementCondition" statementType="STATEMENT">
		SELECT id,subject,is_top,is_red,linkurl,content,type,start_time,end_time,status,in_user_no,in_time,edit_user_no,edit_time,web_type FROM announcement where 1=1
		ORDER BY
		<foreach item="item" collection="sortItemList" separator=",">
			${item.sortFeild} ${item.sortType}
		</foreach>
		LIMIT ${startIndex},${pageSize}
	</select>
	
	<select id="getTotalCount" resultType="long" parameterType="com.hzfh.api.p2pFront.model.query.AnnouncementCondition" statementType="STATEMENT">
		SELECT count(1) FROM announcement where 1=1
	</select>
	<select id="getInfo" resultMap="resultMapAnnouncement" parameterType="int">
		SELECT id,subject,is_top,is_red,linkurl,content,type,start_time,end_time,status,in_user_no,in_time,edit_user_no,edit_time,web_type FROM announcement where id=#{id}
	</select>
	
	<select id="getInfoAPP" resultType="map" parameterType="int">
		SELECT subject ,content,start_time as startTime,end_time as endTime FROM announcement where id=#{id}
	</select>
	
	<insert id="add" parameterType="com.hzfh.api.p2pFront.model.Announcement" useGeneratedKeys="true" keyProperty="id">
		insert into announcement
		(subject,is_top,is_red,linkurl,content,type,start_time,end_time,status,in_user_no,in_time,edit_user_no,edit_time,web_type)
		values
		(#{subject},#{isTop},#{isRed},#{linkurl},#{content},#{type},#{startTime},#{endTime},#{status},#{inUserNo},current_timestamp(),#{editUserNo},current_timestamp(),#{webType})
	</insert>
	<update id="update" parameterType="com.hzfh.api.p2pFront.model.Announcement">
		update announcement set 
		subject=#{subject},is_top=#{isTop},is_red=#{isRed},linkurl=#{linkurl},content=#{content},type=#{type},start_time=#{startTime},end_time=#{endTime},status=#{status},edit_user_no=#{editUserNo},edit_time=current_timestamp(),web_type=#{webType}
		where id=#{id}
	</update>
	<delete id="delete" parameterType="int">
		delete from announcement where id = #{id}
	</delete>
</mapper>